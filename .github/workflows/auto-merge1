name: Merge PR 65 Automatically

on:
  pull_request_review:
    types: [submitted] # Trigger when changes are pushed to the main branch

jobs:
  merge-pr:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Set Up GitHub CLI
        uses: actions/setup-node@v3
        with:
          node-version: '16'

      - name: Check PR #65 Status
        id: check_pr
        run: |
          gh pr view 65 --json state -q .state > pr_state.txt
          if [ "$(cat pr_state.txt)" != "OPEN" ]; then
            echo "PR is not open. Exiting..."
            exit 1
          fi

      - name: Ensure PR is Ready to Merge
        run: |
          gh pr checks 65 --json status,state -q '.[] | select(.status=="COMPLETED" and .state=="SUCCESS")' || exit 1

      - name: Merge PR #65
        run: |
          gh pr merge 65 --merge --admin
